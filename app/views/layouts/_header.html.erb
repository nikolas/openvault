<!-- Openvault Logo and login -->
<div class="row" id="header_top">
  <div class="span4">
	<a href="<%= root_url %>">
    	<div id="ov-logo-home">
				<%= application_name %>
		</div>
	</a>
  </div>
  <div class="span2 pull-right action_links">
		<% if user_signed_in? %>
			<span class="sign_out">
				<%= link_to "Log Out", destroy_user_session_path %>
			</span>
		<% else %>
	    <span class="sign_in">
				<%= link_to "Log In", new_user_session_path %>
			</span>
			<span>&nbsp;|&nbsp;</span>
	    <span class="sign_up">
				<%= link_to "Register", new_user_registration_path %>
			</span>
		<% end %>
  </div>
</div>
<!-- Logo and login -->
