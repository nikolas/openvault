<div id="signup_form_container">
	<h3>Open Vault Registration</h3>
	<p>An Open Vault account is required to view select media and to add tags and annotations. Sign-up is quick and free.</p>
	<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form-horizontal'}) do |f| %>
	  <%= devise_error_messages! %>

		<%= f.input :email, :autofocus => true, :placeholder => 'Email', required: true %>

		<%= f.input :password, :placeholder => 'Password (at least 8 characters)', required: true %>
		
		<%= f.input :password_confirmation, :placeholder => 'Password confirmation', required: true %>
		
		<%= f.input :first_name, :placeholder => 'First name' %>
		
		<%= f.input :last_name, :placeholder => 'Last name' %>
    
    <%= f.input :role, as: :hidden, :input_html => { :value => 'member'} %>
    
    <%= f.input :avatar %>
    
    <%= f.input :role, as: :hidden, :input_html => { :value => 'member'} %>
    
    <%= f.input :organization, :placeholder => 'Organization' %>
    
    <%= f.input :title, :placeholder => 'Title' %>
    
    <%= f.input :bio, :placeholder => 'Biography (500 character limit)' %>
		
		<%= f.input :postal_code, :placeholder => 'Postal code' %>

		<div class="control-group">
			<%= f.label :country, :class => 'control-label' %>
	    <div class="controls">
				<%= country_select("user", "country", ["United States"]) %>
	    </div>
	  </div>
		
		<div class="control-group no-margin">
	    <div class="controls">
				<label for="user_terms_and_conditions" class="checkbox">
					<input id="user_terms_and_conditions" name="user[terms_and_conditions]" type="checkbox" > I accept the Open Vault <a href="/blog/terms-and-conditions">Terms &amp; Conditions</a>
		    </label>
			</div>
		</div>
		
		<div class="control-group no-margin">
	    <div class="controls">
				<label for="user_tmla_updates" class="checkbox">
					<input id="user_mla_updates" name="user[mla_updates]" type="checkbox" checked> Notify me of Open Vault updates and Media Library news
		    </label>
			</div>
		</div>
		
		<div class="control-group">
	    <div class="controls">
	      <label class="checkbox" for="user_remember_me">
	        <input type="checkbox" id="user_remember_me" name="user[remember_me]" checked> Remember me
	      </label>
	      <%= f.submit "Register", :class => 'btn btn-primary' %>
	    </div>
	  </div>
		
	<% end %>
	
	<%= render "devise/shared/links" %>