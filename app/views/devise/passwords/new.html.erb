<div id="signin_form_container">
	<h2>Forgot your password?</h2>

	<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => 'form-horizontal' }) do |f| %>
	  <%= f.input :email, :autofocus => true, required: true %>
		
		<div class="control-group">
	    <div class="controls">
				<%= f.submit "Reset password", :class => "btn btn-primary" %>
			</div>
		</div>
	<% end %>

	<%= render "devise/shared/links" %>
</div>
