<div class="row-fluid">
	<div class="span3">&nbsp;</div>
	<div id="signin_form_container" class="span9">
		<h2>Log in</h2>
		<p>An Open Vault account is required to view select media and to add tags and annotations. Sign-up is quick and free.</p>
		<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-horizontal'}) do |f| %>
		  <%#= devise_error_messages! %>

			<%= f.input :email, :autofocus => true, :placeholder => 'Email', required: true %>

			<%= f.input :password, :placeholder => 'Password', required: true %>
			
			<div class="control-group">
		    <div class="controls">
		      <label class="checkbox" for="user_remember_me">
		        <input type="checkbox" id="user_remember_me" name="user[remember_me]" checked> Remember me
		      </label>
		      <%= f.submit "Register", :class => 'btn btn-primary' %>
		    </div>
		  </div>
			
		<% end %>
		

		<%= render "devise/shared/links" %>
	</div>
</div>
