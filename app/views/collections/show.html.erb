<% title "OpenVault - #{@collection.name}" %>
<% extra_head_content << render_link_rel_alternates %>

<div id="collection_page">
  <div class="row-fluid">
    <div class="span12 type-bar">
      <h3>Exhibitions</h3>
    </div>
  </div>
  <div id="collection_header" class="row-fluid">
    <h2 class="span10"><%= @collection.name %></h2>
    <div id="sharing-tools" class="span2 pull-right">
      <%= render :partial => 'global_partials/share' %>
    </div>
  </div>
  <div id="collection_top" class="row-fluid">
    <div class="span5">
      <%= image_tag @collection.image.url(:large) %>
    </div>
    <div class="span7 summary">
      <%= @collection.summary.html_safe unless @collection.summary.nil? %>
    </div>
  </div>
  <div id="fte-block" class="grainbox">
    <h3>From this exhibit</h3>
    <div class="sep-line"></div>
    <div id="fte-items">
      <%= render :partial => 'collections/from_this_collection' %>
    </div>
  </div>
  <div id="dte">
    <h3>From this exhibit</h3>
    <div class="sep-line"></div>
    <div class="row-fluid">
      <div id="collection_mid" class="span4">
        <h4>Browse</h4>
        <%= @collection.mid_content.html_safe unless @collection.mid_content.nil? %>
      </div>
      <div id="colleciton_bottom" class="span4">
        <h4>Related Links</h4>
        <%= @collection.lower_content.html_safe unless @collection.lower_content.nil? %>
      </div>
    </div>
  </div>
  <!-- End of content that needs to be made dynamic -->
</div>