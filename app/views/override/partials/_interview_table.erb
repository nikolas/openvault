<table width='100%'><tr>
  <% @interviews.in_groups(3,false) do |group| %>
    <td><ul>
      <% group.each do |interview|  %>
        <li>
          <a href='/catalog/<%= interview[:first] %>'><%= interview[:name] %></a>
          <% interview[:rest].each_with_index do |slug,i| %>
            <a href='/catalog/<%= slug %>'>[<%= i+2 %>]</a>
          <% end %>
        </li>
      <% end %>
    </ul></td>
  <% end %>
</tr></table>
