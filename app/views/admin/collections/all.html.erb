<table border="0" cellspacing="0" cellpadding="0" id="collections" class="index_table index" paginator="true">
  <thead>
    <tr>
      <th class="sortable name"><a href="/admin/collections/all?order=name_desc">Name</a></th>
      <th class="summary">Summary</th>
      <th class="image">Image</th>
      <th class="sortable sorted-asc position"><a href="/admin/collections/all?order=position_desc">Position</a></th>
      <th class="sortable display_in_carousel"><a href="/admin/collections/all?order=display_in_carousel_desc">Display In Carousel</a></th>
      <th class=""></th>
    </tr>
  </thead>
  <tbody>
		<% @collection.each do |c| %>
	    <tr class="<%= cycle('even', 'odd') -%>" id="collection_<%= c.id %>">
	      <td class="name"><%= c.name %></td>
	      <td class="summary"><%= truncate(c.summary, :length => 50) %></td>
	      <td class="image">
	      	<%= image_tag c.image.url(:thumb) %>
	      </td>
	      <td class="position"><%= c.position %></td>
	      <td class="display_in_carousel"><%= c.display_in_carousel %></td>
	      <td class=""><a href="/admin/collections/<%= c.id %>" class="member_link view_link">View</a><a href="/admin/collections/<%= c.id %>/edit" class="member_link edit_link">Edit</a><a href="/admin/collections/<%= c.id %>" class="member_link delete_link" data-confirm="Are you sure you want to delete this?" data-method="delete" rel="nofollow">Delete</a></td>
	    </tr>
    <% end %>
  </tbody>
</table>