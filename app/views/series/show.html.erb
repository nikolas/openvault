<!-- THIS IS A TEMPLATE FOR A SERIES LEVEL MODLE -->
<% title "OpenVault - #{display_title @document}" %>
<%# extra_head_content << render_link_rel_alternates %>
<%# extra_head_content << render_document_partial(@document, :meta) %>
<%# extra_head_content << render_document_partial(@document, :opengraph) %>
<%# sidebar_items << render(:partial => 'related_content') %>

<%# this should be in a partial -%>
<div id="document" class="<%= render_document_class %> show_series">
  <div id="doc_<%= @document[:id] %>">
    <div id="document_header">
      <div class="row-fluid">
        <div class="document_heading span9">
          <h2><%= display_title @document %></h2>
        </div>
        <div class="span3">
          &nbsp;
        </div>
      </div>
      <div class="row-fluid">
        <div class="span7 date">
          <p><span class="doc_label">Dated:</span><span class="datetime"><%= @document[:asset_date_ssm].first.to_s unless @document[:asset_date_ssm].nil? %></span></p>
        </div>
        <div class="tools span2">
          <%= render :partial => 'catalog/show_tools' %>
        </div>
        <div class="span3">
          &nbsp;
        </div>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span9 series_content">
        <div class="sep-line-thin"></div>
        <div class="document_content">
          <h4>Summary</h4>
          <p><%= display_summary @document %></p>
          <div class="progams-list">
            <% unless @programs.nil? %>
              <h4>Programs in this series</h4>
              <div id="program-list">
                <% @programs.each do |prog| %>
                  <div class="series-program">
                    <img src="<%= prog[:thumbnail_url] %>">
                    <h4><%= link_to prog[:display_title_ssm].first.to_s, "/programs/#{prog[:slug].to_s}" %></h4>
                  </div>
                <% end %>
              </div>
            <% end %>
          </div>
          <br />
          <div class="metadata">
            <%= 
              begin
                render :partial => "catalog/_metadata_partials/pbcore", :locals => { :document => @document }
              rescue ActionView::MissingTemplate

              end
            %>
          </div>
          <div id="comments">
            <div class="fb-comments" data-href="http://lsopenvault01.wgbh.org" ></div>
          </div>
        </div>
      </div>
      <div class="span3 series_sidebar">
        <%= render(:partial => 'related_content') %>
      </div>
    </div>
  </div>
</div>