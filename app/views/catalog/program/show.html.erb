<% title "#{application_name} - #{display_title @document}" %>
<%# extra_head_content << render_link_rel_alternates %>
<%# extra_head_content << render_document_partial(@document, :meta) %>
<%# extra_head_content << render_document_partial(@document, :opengraph) %>
<%# sidebar_items << render(:partial => 'related_content') %>

<%# this should be in a partial -%>
<div id="document" class="<%= render_document_class %> show_program">
  <div id="doc_<%= @document[:id] %>">
    <%= render partial: 'catalog/document_heading' %>
    <div class="row-fluid">
      <div class="span11 program_content">
        <div class="sep-line-thin"></div>
        <div class="document_content">
          <p><%= display_summary @document unless @document[:title_tesim] == @document[:summary_tesim]%></p>
          <% if !@document[:asset_count_ssm].nil? && @document[:asset_count_ssm].first.to_i > 1 %>
            <%= render :partial => 'catalog/program/partials/multiple_assets', :locals => { :document => @document } %>
          <% elsif !@document[:asset_count_ssm].nil? && @document[:asset_count_ssm].first.to_i == 1 %>
            <%= render :partial => 'catalog/program/partials/single_asset', :locals => { :document => @document } %>
          <% else %>
            <p class="grayed-out">This program has no digital media yet</p>
          <% end  %>
          <br />
          <div class="metadata">
            <%= 
              begin
                render :partial => "catalog/_metadata_partials/pbcore", :locals => { :document => @document }
              rescue ActionView::MissingTemplate
                nil
              end
            %>
          </div>
          <div id="comments">
            <div class="fb-comments" data-href="http://lsopenvault01.wgbh.org" ></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
