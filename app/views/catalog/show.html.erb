<%# title "OpenVault - Document Title" %>
<% title "OpenVault - #{display_title @document}" %>
<%# extra_head_content << render_link_rel_alternates %>
<%# extra_head_content << render_document_partial(@document, :meta) %>
<%# extra_head_content << render_document_partial(@document, :opengraph) %>
<% sidebar_items << render(:partial => 'related_content') %>

<%# this should be in a partial -%>
<div id="document" class="<%= render_document_class %>">
  <div id="doc_<%= @document[:id] %>">
    <div id="document_header">
      <div class="row-fluid">
        <div class="document_heading span12">
          <h2><%= display_title @document %></h2>
        </div>
      </div>
      <div class="row-fluid">
        <div class="span10 date">
          <p><span class="doc_label">Dated:</span><span class="datetime"><%= @document['asset_date_ssm'].first.to_s %></span></p>
        </div>
        <div class="tools span2">
          <%= render :partial => 'show_tools' %>
        </div>
      </div>
    </div>
    <div class="sep-line"></div>
    <div class="document_content">
      <h4>Summary</h4>
      <p><%= @document['display_summary_ssm'].first.html_safe %></p>
      <div class="media">
        <%= render_document_partial @document, :media %>
      </div>
      <%#= render :partial => 'catalog/_show_partials/default', :locals=>{:document=>@document} %>
      <div class="metadata">
        <%= 
          begin
            render :partial => "catalog/_metadata_partials/pbcore", :locals => { :document => @document }
          rescue ActionView::MissingTemplate

          end
        %>
      </div>
      <div id="comments">
        <div class="fb-comments" data-href="http://lsopenvault01.wgbh.org" ></div>
      </div>
    </div>
  </div>
</div>