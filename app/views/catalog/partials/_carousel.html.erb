<div id="collections">
	<%= link_to 'See all >', collections_path, :class => 'see_all' %>
	<div class="pagination">
	</div>
	<h2>Explore the collections</h2>
	<% @collections.each do |collection| %>
		<div class="carousel-entry document">
			<%= image_tag collection.image.url(:carousel), :class => 'collection_image' %>
		  <h3 class="title"><%= link_to collection.name, collection %></h3>
		  <p class="summary"><%= truncate(collection.summary, :length => 200) %></p>
		</div>
	<% end %>
</div>