<div class="document <%= render_document_class document %>">  
    <div  class="doc_thumbnail">
      <% unless document["thumbnail_tesim"].nil? %>
        <%= link_to_document document, label: image_tag(document["thumbnail_tesim"].first) %>
      <% else %>
        <%= image_tag("no_image.gif", alt: "No Image Available") %>
      <% end %>
    </div> 
  <h3 class="index_title">
    <%= link_to_document document, :label=>document[:title_ssm].first, :counter => (document_counter + 1 + @response.params[:start].to_i) %><%= " (Video Excerpt)" if document.get('media_dsid_s') =~ /Video/ and document.get('dc_type_s') =~ /excerpt/ %>
  </h3>  
  <div class="defList_container">
    <% unless document[:summary_ssm].nil? %>
      <div class="blacklight-summary">
        <div class="doc_value"><p><span class="doc_label">Summary:</span><%= truncate(strip_tags(document[:summary_ssm].first), :length => 200) %></p></div>
      </div>
    <% end %>
    <% index_field_names.each do |solr_fname| -%>
      <% value = render_index_field_value :document => document, :field => solr_fname %>
      <% unless value.blank? %>
        <div class="blacklight-<%= solr_fname.parameterize %>" >
          <div class="doc_value"><p><span class="doc_label"><%= render_index_field_label :field => solr_fname %>:</span><%= render_index_field_value :document => document, :field => solr_fname %></p></div>
        </div>
      <% end -%>
    <% end -%>
  </div>
  <%#= render_document_unapi_microformat document %>
  <div class="clearfix"></div>
</div>