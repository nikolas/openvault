<div class="datastream primary-datastream datastream-video datastream-video-mp4">
  <%= render_video_player(datastream_url(document.fedora_object.datastream["Video.mp4"]), :size => "320x240", :controls => true, :poster => document.thumbnail.url(:style => :poster)) %>
</div>

<div class="secondary-datastream-container">
  <h2>Log</h2>
  <div class="datastream-actions">
    <%= link_to "Print", print_catalog_path(:id => document.id), :class => "print action", :target => "_blank" %>
    <form action="#" method="GET" class="q_field datastream-action-search">
      <%= text_field_tag :q, nil, :class => "q", :placeholder => "Search Transcript" %>
    <%= image_submit_tag("magnifying-glass.gif", :alt => "Search Transcript", :class => 'submit') %>
  </form>
</div>
<div class="datastream secondary-datastream datastream-transcript datastream-transcript-newsml-xml">
  <%= render_newsml_transcript(datastream_url(document.fedora_object.datastream["Transcript.newsml.xml"], :private => true)) %>
</div>
</div>
<div class="media_fragment_template">
  <%= render :partial => "comments/media_fragment" %>
</div>

