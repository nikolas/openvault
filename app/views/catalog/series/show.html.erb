<%# this should be in a partial -%>
<div id="document" class="<%= render_document_class %> show_series">
  <div id="doc_<%= @document[:id] %>">
    <%= render partial: 'catalog/document_heading' %>
    <div class="row-fluid">
      <div class="span11 series_content">
        <div class="sep-line-thin"></div>
        <div class="document_content">
          <p><%= display_summary @document unless @document[:title_tesim] == @document[:summary_tesim]%></p>
            
          <% cache("series-tabs-#{@ov_asset.id}") do %>
            <%= render partial: 'global_partials/tabs', locals: { 
              tabs: 
                tabs_for(@ov_asset.id, [:media, :programs])
            } %> 
          <% end %>
            
          <div id="comments">
            <%= render partial: 'catalog/facebook_comments' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
