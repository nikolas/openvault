<%# this should be in a partial -%>
<div id="document" class="<%= render_document_class %> show_series">
  <div id="doc_<%= @document[:id] %>">
    <%= render partial: 'catalog/document_heading' %>
    <div class="row-fluid">
      <div class="span11 series_content">
        <div class="sep-line-thin"></div>
        <div class="document_content">
          <p><%= display_summary @document unless @document[:title_tesim] == @document[:summary_tesim]%></p>
          
          <% cache("series-lists-#{@ov_asset.id}") do %>
            <%= render :partial => 'catalog/series/program_list' %>
            <div style="heigh:10px">&nbsp;</div>
            <%= render :partial => 'catalog/series/video_list' %>
            <div style="heigh:10px">&nbsp;</div>
            <%= render :partial => 'catalog/series/image_list' %>
          <% end %>
            
          <div class="metadata">
            <%#= 
              begin
                render :partial => "catalog/_metadata_partials/pbcore", :locals => { :document => @document }
              rescue ActionView::MissingTemplate

              end
            %>
          </div>
          <div id="comments">
            <%= render partial: 'catalog/facebook_comments' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
