<!-- Partial used for displaying the header -->

<div id="document_header">
  <div class="row-fluid">
    <div class="document_heading span11">
      <h2><%= display_title @document %></h2>
    </div>
    <div class="span1">
      &nbsp;
    </div>
  </div>
  <div class="row-fluid">
    <div class="span3 date">
      <%= display_date @document %>
    </div>
    <div class="tools">
      <% unless ['Series','Image'].include?(@document['active_fedora_model_ssi']) %>
        <div style="float:right">
          <%= artifact_digitization_link(@document, @digitization_artifact) %>
          <%= artifact_transcription_link(@document, @transcription_artifact) %>
        </div>
      <% end %>
      <%= render partial: 'catalog/show_tools' %>
    </div>
    <div class="span1">
      &nbsp;
    </div>
  </div>
</div>
