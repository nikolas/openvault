<!-- Partial used for displaying the header -->

<div id="document_header">
  <div class="row-fluid">
    <div class="document_heading span9">
      <h2><%= display_title @document %></h2>
    </div>
    <div class="span3">
      &nbsp;
    </div>
  </div>
  <div class="row-fluid">
    <div class="span6 date">
      <%= display_date @document %>
    </div>
    <div class="tools span3">
      <% unless @document['active_fedora_model_ssi'] == "Series" %>
        <div style="float:right"><%= artifact_digitization_link(@document, @digitization_artifact) %></div>
        <div style="float:right"><%= artifact_transcription_link(@document, @transcription_artifact) %></div>
        <div class='clearfix'></div>
      <% end %>
      <%= render partial: 'catalog/show_tools' %>
    </div>
    <div class="span3">
      &nbsp;
    </div>
  </div>
</div>
