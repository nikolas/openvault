<%= simple_form_for(@custom_collection) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :summary %>
    <%= f.input :image %>
    <%= f.input :article %>
    <%= f.input :user_id, as: :hidden, input_html: { :value => current_user.id } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
