<div id="collection_container">
  <br />
  <div class="collection_block tabbable responsive">
    <ul class="nav nav-tabs" id="collectionTabs">
      <li class="active"><a href="#summary" class="summary-link" data-toggle="tab">Summary</a></li>
      <li><a href="#article-content" class="article-content-link" data-toggle="tab">Article Content</a></li>
      <li><a href="#media" class="media-link" data-toggle="tab">Media</a></li>
      <li><a href="#images" class="images-link" data-toggle="tab">Images</a></li>
      <li><a href="#related" class="related-link" data-toggle="tab">Related Content</a></li>
    </ul>
    <div class="tab-content">
      <div id="summary" class="tab-pane active fade in">
        <%= @custom_collection.summary.html_safe %>
      </div>
      <div id="article-content" class="tab-pane fade in" data-article="<%= @custom_collection.article.url %>">
        <% unless @custom_collection.article.nil? %>
          <p class="article_rights"><%= @custom_collection.article_rights.to_s %></p>
          <%= pdf_viewer("http://localhost:3000#{@custom_collection.article.url}") %>
          <p class="hidden-tablet hidden-desktop pdf-download-link"><%= link_to 'View PDF', @custom_collection.article.url, :target => "_blank" %></p>
          <%= javascript_include_tag "pdfviewer" %>
          <%= stylesheet_link_tag "viewer" %>
        <% end %>
      </div>
      <div id="media" class="tab-pane fade in">
        <% unless @custom_collection.custom_collection_items.videos.count == 0 %>
          <% if @custom_collection.custom_collection_items.videos.count > 1 %>
            <div id="cc_video_container hidden-phone">
              <div id="cc_video_player">
              <video id="cc_player" class="video-js vjs-default-skin vjs-big-play-centered"
                controls preload="auto" width="100%" height="450"
                data-setup='{}'
                poster="/assets/slider_thumb.png">
                <source src="/assets/video_test.mp4" type='video/mp4' />
                <source src="/assets/video_test.webm" type='video/webm' />
                <source src="/assets/video_test.ogg" type='video/ogg' />
              </video>
              <p class="video_title">Video Title 1</p>
            </div>
              <div id="cc_video_thumbnail_list" class="jThumbnailScroller">
              <div class="jTscrollerContainer">
                <div class="jTscroller">
                  <a href="#" class="v_thumbnail" data-videourl="/assets/video_test.mp4">
                    <img src="/assets/slider_thumb.png" alt="Video title 1" />
                  </a>
                  <a href="#" class="v_thumbnail" data-videourl="/assets/test_vid_2.mp4">
                    <img src="/assets/tmp_cat_image_thumb.jpg" alt="Video title 2" />
                  </a>
                  <a href="#" class="v_thumbnail" data-videourl="/assets/video_test.mp4">
                    <img src="/assets/slider_thumb.png" alt="Video title 1" />
                  </a>
                  <a href="#" class="v_thumbnail" data-videourl="/assets/test_vid_2.mp4">
                    <img src="/assets/tmp_cat_image_thumb.jpg" alt="Video title 2" />
                  </a>
                  <a href="#" class="v_thumbnail" data-videourl="/assets/video_test.mp4">
                    <img src="/assets/slider_thumb.png" alt="Video title 1" />
                  </a>
                  <a href="#" class="v_thumbnail" data-videourl="/assets/test_vid_2.mp4">
                    <img src="/assets/tmp_cat_image_thumb.jpg" alt="Video title 2" />
                  </a>
                  <a href="#" class="v_thumbnail" data-videourl="/assets/video_test.mp4">
                    <img src="/assets/slider_thumb.png" alt="Video title 1" />
                  </a>
                  <a href="#" class="v_thumbnail" data-videourl="/assets/test_vid_2.mp4">
                    <img src="/assets/tmp_cat_image_thumb.jpg" alt="Video title 2" />
                  </a>
                  <a href="#" class="v_thumbnail" data-videourl="/assets/video_test.mp4">
                    <img src="/assets/slider_thumb.png" alt="Video title 1" />
                  </a>
                  <a href="#" class="v_thumbnail" data-videourl="/assets/test_vid_2.mp4">
                    <img src="/assets/tmp_cat_image_thumb.jpg" alt="Video title 2" />
                  </a>
                </div>
              </div>
              <a href="#" class="jTscrollerPrevButton"></a>
              <a href="#" class="jTscrollerNextButton"></a>
            </div>
            </div>
            <div class="hidden-desktop hidden-tablet mobile-video-links">
              <% @custom_collection.custom_collection_items.videos.each do |col| %>
                <%= link_to col.ov_asset['title_ssm'], "/video/#{col.ov_asset['slug']}" %>
              <% end %>
            </div>
            <hr />
          <% else %>
            <video id="cc_player" class="video-js vjs-default-skin vjs-big-play-centered hidden-phone"
              controls preload="auto" width="100%" height="450"
              data-setup='{}'
              poster="/assets/slider_thumb.png">
              <source src="/assets/video_test.mp4" type='video/mp4' />
              <source src="/assets/video_test.webm" type='video/webm' />
              <source src="/assets/video_test.ogg" type='video/ogg' />
            </video>
            <video id="cc_player" class="video-js vjs-default-skin vjs-big-play-centered hidden-desktop hidden-tablet"
              controls preload="auto" width="100%" height="180"
              data-setup='{}'
              poster="/assets/slider_thumb.png">
              <source src="/assets/video_test.mp4" type='video/mp4' />
              <source src="/assets/video_test.webm" type='video/webm' />
              <source src="/assets/video_test.ogg" type='video/ogg' />
            </video>
            <h3>
              <a href="/video/<%= @custom_collection.custom_collection_items.videos.first.ov_asset['slug'] %>">
                <%= @custom_collection.custom_collection_items.videos.first.ov_asset['title_ssm'].try(:first).to_s %>
              </a>
            </h3>
            <p class="video_summary">
              <%= @custom_collection.custom_collection_items.videos.first.ov_asset['summary_ssm'].try(:first) %>
            </p>
            <hr />
          <% end %>
        <% end %>
        <h3>Other assets in this collection</h3>
        <% unless @custom_collection.custom_collection_items.audios.count == 0 %>
        <p>
          <b>Custom Collection Items (Audio):</b>
          <% @custom_collection.custom_collection_items.audios.each do |col| %>
            Audio: <%= link_to col.ov_asset['title_ssm'], "/audio/#{col.ov_asset['slug']}" %>
          <% end %>
        </p>
        <% end %>
        <% unless @custom_collection.custom_collection_items.programs.count == 0 %>
        <p>
          <b>Custom Collection Items (Programs):</b>
          <% @custom_collection.custom_collection_items.programs.each do |col| %>
            Program: <%= link_to col.ov_asset['title_ssm'], "/programs/#{col.ov_asset['slug']}" %>
          <% end %>
        </p>
        <% end %>
        <% unless @custom_collection.custom_collection_items.series.count == 0 %>
        <p>
          <b>Custom Collection Items (Series):</b>
          <% @custom_collection.custom_collection_items.series.each do |col| %>
            Series: <%= link_to col.ov_asset['title_ssm'], "/series/#{col.ov_asset['slug']}" %>
          <% end %>
        </p>
        <% end %>
      </div>
      <div id="images" class="tab-pane fade in">
        <% if @custom_collection.custom_collection_images.count > 0 %>
          <%= render :partial => "custom_collection_images_gallery", :locals => {:custom_collection => @custom_collection} %>
        <% else %>
          <%= render :partial => "no_images" %>
        <% end %>
      </div>

      <div id="related" class="tab-pane fade in">
        <% @custom_collection.custom_collection_related_links.each do |link| %>
          <div class="link_block">
            <a href="<%= link.link %>"><%= link.link %></a>
            <p><%= link.desc %></p>
          </div>
        <% end %>
      </div>
    </div>
    <p class="collection_credits">Credits: <%= @custom_collection.credits.to_s %></p>
    <% if current_user && current_user == @custom_collection.owner %>
      <%= link_to 'Edit collection details', edit_custom_collection_path(@custom_collection) %>
      <%#= link_to 'Back', @custom_collections_path %>
    <% end %>
  </div>
</div>

