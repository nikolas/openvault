<% title "#{application_name} - Collections" %>
<h2>Scholar Collections</h2>
<% @custom_collections.each do |collection| %>
  <div class="row-fluid">
    <div class="span10">
      <br/>
      <h4><%= link_to collection.name, collection %></h4>
      <p><%= collection.summary %></p>
      <p><%= link_to collection.owner.full_name, collection.owner.url rescue collection.owner.name %></p>
    </div>
  </div>
<% end %>

