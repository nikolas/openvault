<!--
  Partial used for displaying a single Video result in catalog#index.
-->
<div class="document <%= render_document_class video %>">  
    <div  class="doc_thumbnail">
      <% unless video["thumbnail_ssm"].nil? %>
        <%= link_to image_tag(video["thumbnail_ssm"].first), controller: 'videos', action: 'show', id: video.id %>
      <% else %>
        <%= image_tag("no_image.gif", alt: "No Image Available") %>
      <% end %>
    </div> 
  <h3 class="index_title">
    <% if video[:title_tesim] %>
      <%= link_to video[:title_tesim].first, controller: 'videos', action: 'show', id: video.id %>
    <% else %>
      <%= "Untitled Video" %>
    <% end %>
  </h3>  
  <div class="defList_container">
    <% unless video[:summary_tesim].nil? %>
      <div class="blacklight-summary">
        <div class="doc_value"><p><%= truncate(strip_tags(video[:summary_tesim].first), :length => 250) %></p></div>
      </div>
    <% end %>
    <% unless video[:active_fedora_model_ssi].nil? %>
      <div class="blacklight-model">
        <div class="doc_value"><p><span class="doc_label">Media Type:</span><%= truncate(strip_tags(video[:active_fedora_model_ssi])) %></p></div>
      </div>
    <% end %>
    <% unless video[:asset_date_tesim].nil? %>
      <div class="blacklight-date">
        <div class="doc_value"><p><span class="doc_label">Date:</span><%= truncate(strip_tags(video[:asset_date_tesim].first)) %></p></div>
      </div>
    <% end %>
    <% index_field_names.each do |solr_fname| -%>
      <% value = render_index_field_value :document => video, :field => solr_fname %>
      <% unless value.blank? %>
        <div class="blacklight-<%= solr_fname.parameterize %>" >
          <div class="doc_value"><p><span class="doc_label"><%= render_index_field_label :field => solr_fname %>:</span><%= render_index_field_value :document => video, :field => solr_fname %></p></div>
        </div>
      <% end -%>
    <% end -%>
  </div>
  <%#= render_document_unapi_microformat video %>
  <div class="clearfix"></div>
</div>
