<!-- THIS IS A TEMPLATE FOR A SERIES LEVEL MODLE -->
<% title "OpenVault - #{display_title @document}" %>
<%# extra_head_content << render_link_rel_alternates %>
<%# extra_head_content << render_document_partial(@document, :meta) %>
<%# extra_head_content << render_document_partial(@document, :opengraph) %>
<%# sidebar_items << render(:partial => 'related_content') %>

<%# this should be in a partial -%>
<div id="document" class="<%= render_document_class %> show_program">
  <div id="doc_<%= @document[:id] %>">
    
    <div id="document_header" class="row-fluid">
      <div class="document_heading span8">
        <h2><%= @video.title %></h2>
        <%= render :partial => 'addthis/toolbox' %>
      </div>
      <div class="tools span4">
        <%= render partial: 'catalog/user_tools' %>
        <p><%= artifact_digitization_link(@document, @digitization_artifact) %></p>
        <p><%= artifact_transcription_link(@document, @transcription_artifact) %></p>
        <div class='clearfix'></div>
      </div>
    </div>
    
    <div class="row-fluid">
      <div class="span12 video_content">
        <div class="document_content">
          <p><%= @video.summary %></p>
          <%= render partial: 'videos/player' %>
          <%= render partial: 'videos/images' %>
          <div class="metadata">
            
            <%= 
              begin
                render :partial => "catalog/_metadata_partials/pbcore", :locals => { :document => @document }
              rescue ActionView::MissingTemplate

              end
            %>
          </div>

          <div id="comments">
            <div class="fb-comments" data-href="http://lsopenvault01.wgbh.org" ></div>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>
